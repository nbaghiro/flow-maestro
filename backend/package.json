{
    "name": "@flowmaestro/backend",
    "version": "1.0.0",
    "description": "FlowMaestro Backend API and Orchestrator",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "test:coverage": "jest --coverage",
        "typecheck": "tsc --noEmit",
        "db:migrate": "node-pg-migrate up --migrations-table flowmaestro.pgmigrations --schema flowmaestro --database-url-var DATABASE_URL",
        "db:migrate:up": "node-pg-migrate up --migrations-table flowmaestro.pgmigrations --schema flowmaestro --database-url-var DATABASE_URL",
        "db:migrate:down": "node-pg-migrate down --migrations-table flowmaestro.pgmigrations --schema flowmaestro --database-url-var DATABASE_URL",
        "db:migrate:create": "node-pg-migrate create --migrations-table flowmaestro.pgmigrations --migration-file-language sql",
        "db:migrate:status": "docker exec flowmaestro-postgres psql -U flowmaestro -d flowmaestro -c 'SELECT * FROM flowmaestro.\"flowmaestro.pgmigrations\" ORDER BY run_on DESC;'",
        "worker:orchestrator": "npm run build && node dist/temporal/workers/orchestrator-worker.js",
        "worker:orchestrator:dev": "tsx src/temporal/workers/orchestrator-worker.ts",
        "worker:orchestrator:watch": "nodemon --config nodemon.temporal.json",
        "seed:test-workflows": "tsx tests/fixtures/workflows/seed-workflows.ts"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.67.0",
        "@fastify/cors": "^11.1.0",
        "@fastify/formbody": "^8.0.2",
        "@fastify/jwt": "^10.0.0",
        "@fastify/multipart": "^9.3.0",
        "@fastify/static": "^8.3.0",
        "@fastify/websocket": "^11.2.0",
        "@flowmaestro/shared": "*",
        "@google/generative-ai": "^0.24.1",
        "@temporalio/activity": "^1.13.1",
        "@temporalio/client": "^1.13.1",
        "@temporalio/common": "^1.13.1",
        "@temporalio/worker": "^1.13.1",
        "@temporalio/workflow": "^1.13.1",
        "@types/nodemailer": "^7.0.3",
        "axios": "^1.12.2",
        "bullmq": "^5.3.0",
        "cheerio": "^1.0.0",
        "cohere-ai": "^7.19.0",
        "dotenv": "^16.4.1",
        "fastify": "^5.6.1",
        "jsonata": "^2.1.0",
        "mammoth": "^1.8.0",
        "mongodb": "^6.20.0",
        "nodemailer": "^7.0.10",
        "openai": "^6.7.0",
        "pdf-parse": "^2.4.5",
        "pg": "^8.11.3",
        "pgvector": "^0.2.0",
        "redis": "^4.6.13",
        "uuid": "^9.0.1",
        "vm2": "^3.10.0",
        "xml2js": "^0.6.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@temporalio/testing": "^1.13.1",
        "@types/better-sqlite3": "^7.6.13",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.16",
        "@types/pdf-parse": "^1.1.5",
        "@types/pg": "^8.11.0",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.8",
        "@types/xml2js": "^0.4.14",
        "better-sqlite3": "^12.4.1",
        "jest": "^29.7.0",
        "msw": "^2.11.6",
        "nock": "^14.0.10",
        "node-pg-migrate": "^8.0.3",
        "nodemon": "^3.1.10",
        "pino-pretty": "^10.3.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3"
    }
}
