{
    "name": "LLM Integration - Chained Providers",
    "description": "Tests OpenAI â†’ Anthropic chaining with real APIs and variable interpolation",
    "entryPoint": "input-1",
    "nodes": {
        "input-1": {
            "type": "input",
            "name": "Start",
            "config": {
                "required": true,
                "inputName": "topic",
                "inputType": "text",
                "validation": "",
                "description": "",
                "defaultValue": ""
            },
            "position": {
                "x": -78.5117144585189,
                "y": -205.41992981806715
            }
        },
        "llm-openai": {
            "type": "llm",
            "name": "OpenAI Generation",
            "config": {
                "topP": 1,
                "model": "gpt-4o-mini",
                "prompt": "Write one interesting sentence about ${topic}. Keep it under 20 words.",
                "provider": "openai",
                "maxTokens": 100,
                "temperature": 0.7,
                "connectionId": "OPENAI_CONNECTION_ID",
                "systemPrompt": "You are a helpful assistant that writes concise, interesting sentences.",
                "outputVariable": "openai_response"
            },
            "position": {
                "x": 195.13310356957822,
                "y": -210.77639713397562
            }
        },
        "llm-anthropic": {
            "type": "llm",
            "name": "Anthropic Refinement",
            "config": {
                "topP": 1,
                "model": "claude-haiku-4-5-20251001",
                "prompt": "Make this sentence more creative and add a touch of humor: ${openai_response.text}",
                "provider": "anthropic",
                "maxTokens": 100,
                "temperature": 0.7,
                "connectionId": "ANTHROPIC_CONNECTION_ID",
                "systemPrompt": "You are a creative writing assistant that adds humor and wit.",
                "outputVariable": "anthropic_response"
            },
            "position": {
                "x": 491.8689828556626,
                "y": -215.85389963958824
            }
        },
        "transform-1": {
            "type": "transform",
            "name": "Combine Results",
            "config": {
                "inputData": "${openai_response}",
                "operation": "custom",
                "expression": "{ \"original\": openai_response.text, \"refined\": anthropic_response.text, \"openai_tokens\": openai_response.usage.totalTokens, \"anthropic_tokens\": anthropic_response.usage.totalTokens, \"total_tokens\": openai_response.usage.totalTokens + anthropic_response.usage.totalTokens }",
                "outputVariable": "result"
            },
            "position": {
                "x": 14.354058048820718,
                "y": 14.222284151042885
            }
        },
        "output-1": {
            "type": "output",
            "name": "Final Result",
            "config": {
                "value": "${result}",
                "format": "json",
                "outputName": "finalResult",
                "description": ""
            },
            "position": {
                "x": 362.03048626230463,
                "y": 8.2490374978413
            }
        }
    },
    "edges": [
        {
            "id": "e1",
            "source": "input-1",
            "target": "llm-openai"
        },
        {
            "id": "e2",
            "source": "llm-openai",
            "target": "llm-anthropic"
        },
        {
            "id": "e3",
            "source": "llm-anthropic",
            "target": "transform-1"
        },
        {
            "id": "e4",
            "source": "transform-1",
            "target": "output-1"
        }
    ]
}
