# Database Configuration
# Option 1: Use connection string (recommended)
DATABASE_URL=postgresql://flowmaestro:flowmaestro_dev_password@localhost:5432/flowmaestro

# Option 2: Use individual environment variables
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=flowmaestro
POSTGRES_USER=flowmaestro
POSTGRES_PASSWORD=flowmaestro_dev_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Temporal
TEMPORAL_ADDRESS=localhost:7233

# Backend Server
PORT=3001
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Security
JWT_SECRET=your-secret-key-change-this-in-production

# Encryption Key for credentials (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# MUST be 64 hex characters (32 bytes)
ENCRYPTION_KEY=

# Frontend
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# LLM Providers (Optional - add your API keys for testing)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# OAuth Integrations (Optional)
# Slack
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Notion
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# Google Cloud Storage (for Knowledge Base documents)
# Required: GCS bucket name where documents will be stored
GCS_BUCKET_NAME=flowmaestro-knowledge-docs
# Optional: GCP project ID (uses Application Default Credentials if not set)
GCS_PROJECT_ID=
# Optional: Signed URL expiration time in seconds (default: 3600 = 1 hour)
GCS_SIGNED_URL_EXPIRATION=3600

# App Configuration
NODE_ENV=development
LOG_LEVEL=debug
